doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="/stylesheets/styles.css")
    title Food Hub Payment
  body
    .payment-container
      h2= payment.details
      form#payment-form
        label(for="card-number") #{payment.cardNumber}
        input(type="text", id="card-number", placeholder="Enter card number", required)
        
        label(for="expiration") #{payment.expiration}
        input(type="text", id="expiration", placeholder="MM/YY", required)
        
        label(for="cvv") #{payment.cvv}
        input(type="text", id="cvv", placeholder="CVV", required)
        
        h3= payment.options
        .payment-options
          .payment-option
            input(type="radio", id="credit-card", name="payment-option", value="credit-card", checked)
            label(for="credit-card") #{payment.creditcard}
          .payment-option
            input(type="radio", id="paytm", name="payment-option", value="paytm")
            label(for="paytm")
              img.logo(src="./images/paytm.png", alt="Paytm")
          .payment-option
            input(type="radio", id="phonepe", name="payment-option", value="phonepe")
            label(for="phonepe")
              img.logo(src="./images/phonepay.png", alt="PhonePe")
        
        button(type="submit") #{payment.paynow}
        a.nav-link(href='/') Home
    script(src="/javascripts/script.js")
